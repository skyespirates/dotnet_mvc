@model Category
@{
  ViewData["Title"] = "Delete Category";
}

<div class="text-center">
  <h2 class="display-5">Delete Category</h2>
</div>
<form class="mx-auto" style="width: 40%;" method="POST" asp-action="Delete">
  <input asp-for="Id" type="hidden">
  <div class="mb-3">
    <label class="" asp-for="Name"></label>
    <input class="form-control" disabled type="text" asp-for="Name">
  </div>
  <div class="mb-3">
    <label class="" asp-for="DisplayOrder"></label>
    <input class="form-control" disabled type="number" asp-for="DisplayOrder">
  </div>
  <div class="text-center">
    <button class="btn btn-danger" type="submit">Delete</button>
  </div>
</form>
<div class="text-center">
  <a asp-controller="Category" asp-action="Index" class="text-secondary">Back</a>
</div>

@section Scripts{
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}